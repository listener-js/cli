{
  "name": "@listener-js/cli",
  "version": "0.1.0",
  "description": "Listener CLI",
  "keywords": [
    "listener",
    "cli"
  ],
  "author": "Listener <emit@listener.events>",
  "main": "dist/cli.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com//cli.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/listener-js/cli#readme",
  "scripts": {
    "fix": "npm run lint -- --fix",
    "lint": "eslint --ignore-path .gitignore --ext=js .",
    "pretty": "prettier --write **/*.css **/*.json **/*.md",
    "test": "jest",
    "build": "tsc",
    "docs": "typedoc --out docs --media media --theme markdown src/*.ts"
  },
  "dependencies": {
    "@listener-js/listener": "1.14.0",
    "@listener-js/log": "1.19.0"
  },
  "devDependencies": {
    "@types/jest": "24.0.16",
    "@types/node": "12.6.8",
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "eslint": "<6",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-prettier": "3.1.0",
    "find-up": "4.1.0",
    "fs-extra": "8.1.0",
    "getopts": "2.2.5",
    "glob": "7.1.4",
    "husky": "3.0.2",
    "jest": "24.8.0",
    "lint-staged": "9.2.1",
    "prettier": "1.18.2",
    "ts-jest": "24.0.2",
    "typedoc": "0.15.0",
    "typedoc-plugin-markdown": "2.1.0",
    "typescript": "3.5.3"
  },
  "prettier": {
    "printWidth": 60,
    "semi": false,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test && npm run docs && git add docs"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,jsx,ts}": [
      "eslint --ignore-path .gitignore --fix",
      "git add"
    ]
  }
}
